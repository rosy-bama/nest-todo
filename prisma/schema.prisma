// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  firstname String
  lastname String
  email String  @unique
  password String
  
  todos Todo[]
  @@map("user")
}

model Todo {
  id    Int     @id @default(autoincrement())
  title String  @unique
  content  String

  created_at DateTime @default(now())
  updated_at DateTime

  user  User @relation(fields: [userId], references: [id])
  userId Int
  @@map("todo")
}